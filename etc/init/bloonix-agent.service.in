[Unit]
Description=Bloonix Agent
After=network.target

[Service]
Type=forking
PIDFile=@@RUNDIR@@/bloonix/bloonix-agent.pid
ExecStartPre=@@USRLIBDIR@@/bloonix/bin/bloonix-pre-start @@LIBDIR@@/bloonix @@LIBDIR@@/bloonix/agent @@LOGDIR@@/bloonix @@RUNDIR@@/bloonix
ExecStart=@@PREFIX@@/bin/bloonix-agent --pid-file @@RUNDIR@@/bloonix/bloonix-agent.pid --config-file @@CONFDIR@@/bloonix/agent/main.conf --sock-file @@RUNDIR@@/bloonix/bloonix-agent.sock
ExecReload=/bin/kill -1 $MAINPID
ExecStop=/bin/kill -15 $MAINPID
PrivateTmp=true
TimeoutStartSec=15
TimeoutStopSec=30
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
